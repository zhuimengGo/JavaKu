<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"></property>
		<property name="url"
			value="jdbc:oracle:thin:@localhost:1521:orcl">
		</property>
		<property name="username" value="scott"></property>
		<property name="password" value="zxx4257561"></property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.Oracle9Dialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>pojo/House.hbm.xml</value>
				<value>pojo/District.hbm.xml</value>
				<value>pojo/Types.hbm.xml</value>
				<value>pojo/Users.hbm.xml</value>
				<value>pojo/Street.hbm.xml</value></list>
		</property></bean>
		<bean id="UserDao" class="DaoImpl.UserDao">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="HouseDao" class="DaoImpl.HouseDao">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="userService" class="ServiceImpl.UsersService">
		<property name="ud">
			<ref bean="UserDao"/>
		</property>
	</bean>
	<bean id="houseService" class="ServiceImpl.HouseService">
		<property name="hd">
			<ref bean="HouseDao"/>
		</property>
	</bean>
	<bean id="UserAction" class="Action.UserAction" scope="prototype">
		<property name="userService">
			<ref bean="userService"/>
		</property>
	</bean>
	<bean id="HouseAction" class="Action.HouseAction" scope="prototype">
		<property name="houseService">
			<ref bean="houseService"/>
		</property>
	</bean>
	
		</beans>