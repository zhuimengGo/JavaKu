<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<constant name="struts.i18n.encoding" value="utf-8"></constant>
	<package name="BirdHouse2" extends="struts-default" namespace="/">
	<interceptors>
		<interceptor name="CheckLoginIterceptor" class="Action.interceptor.CheckLoginIterceptor"></interceptor>
	</interceptors>
	<global-results>
			<result name="login_failure">/page/login.jsp</result>
		</global-results>
		<action name="fang" class="Action.HouseAction">
			<result name="SUCCESS">/page/guanli.jsp</result>
		</action>
		<action name="fabu" class="Action.HouseAction" method="fabu">
		<interceptor-ref name="CheckLoginIterceptor"/>
			<result name="SUCCESS">/page/fabu.jsp</result>
		</action>
	<action name="login" class="Action.UserAction" method="login">
	<result name="yonghu" type="redirectAction">showFang</result>
	<result name="guanli" type="redirectAction">guanli</result>
	</action>
	<action name="guanli" class="Action.HouseAction" method="guanli">
	<interceptor-ref name="CheckLoginIterceptor"/>
	<result name="SUCCESS">/page/guanli.jsp</result>
	</action>
	<action name="showFang" class="Action.HouseAction" method="showFang">
	<interceptor-ref name="CheckLoginIterceptor"/>
	<result name="SUCCESS">/page/list.jsp</result>
	</action>
	<action name="logout" class="Action.UserAction" method="logout">
	<result name="SUCCESS" type="redirectAction">welcome</result>
	</action>
	<action name="regsgo" class="Action.UserAction" method="regs">
			<result name="SUCCESS" type="redirectAction">welcome</result>
		</action>
	<action name="yanz" class="Action.UserAction" method="yanz"></action>
	<action name="regs" class="Action.UserAction">
			<result name="SUCCESS">/page/regs.jsp</result>
		</action>
	<action name="yanzname" class="Action.UserAction" method="yanzname"></action>
	<action name="welcome" class="Action.UserAction">
			<result name="SUCCESS">/page/login.jsp</result>
	</action>
	<action name="searchFang" class="Action.HouseAction" method="search">
			<result name="SUCCESS" type="redirectAction">showFang</result>
	</action>
	<action name="getstreet" class="Action.HouseAction" method="getstreet">
	</action>
	<action name="addorupdateHouse" class="Action.HouseAction" method="addorupdateHouse">
			<result name="SUCCESS" type="redirectAction">guanli</result>
	</action>
	<action name="delHouse" class="Action.HouseAction" method="delHouse">
	</action>
	<action name="updHouse" class="Action.HouseAction" method="updHouse">
	</action>
	<action name="detailsFang" class="Action.HouseAction" method="detailsFang">
			<result name="SUCCESS">/page/details.jsp</result>
	</action>
	</package>
</struts>    
